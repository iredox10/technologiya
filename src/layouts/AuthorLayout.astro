---
import BaseLayout from './BaseLayout.astro';
import AuthorSidebar from '../components/author/AuthorSidebar';
import { authService, authorService } from '../lib/appwriteServices';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Check authentication
const isAuthenticated = await authService.isAuthenticated();
if (!isAuthenticated) {
  return Astro.redirect('/login');
}

// Get current user
const userResult = await authService.getCurrentUser();
if (!userResult.success || !userResult.data) {
  return Astro.redirect('/login');
}

// Check if user is an author/admin
const userId = userResult.data.$id;
const authorResult = await authorService.getAuthorByUserId(userId);
if (!authorResult.success || !authorResult.data) {
  return Astro.redirect('/login');
}

// Check if author is active
const author = authorResult.data;
if (author.status !== 'active') {
  return Astro.redirect('/login');
}

// Authors and admins can access this layout
if (author.role !== 'author' && author.role !== 'admin') {
  return Astro.redirect('/login');
}
---

<BaseLayout title={title}>
  <div class="flex h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Sidebar -->
    <AuthorSidebar client:load />
    
    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden lg:ml-64">
      <!-- Top Header -->
      <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 px-6 py-4 lg:mt-0 mt-14">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white" style="font-family: 'Fira Code', monospace;">
              {title}
            </h1>
          </div>
          <div class="flex items-center space-x-4">
            <a
              href="/"
              target="_blank"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              Duba Shafin â†’
            </a>
          </div>
        </div>
      </header>
      
      <!-- Page Content -->
      <main class="flex-1 overflow-y-auto p-6">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>
