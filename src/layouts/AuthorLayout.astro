---
import BaseLayout from './BaseLayout.astro';
import AuthorSidebar from '../components/author/AuthorSidebar';
import ActivityTracker from '../components/author/ActivityTracker';
import { Toaster } from 'react-hot-toast';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Note: Authentication is handled client-side in the AuthorSidebar component
// Server-side auth checks cause issues with Appwrite's client SDK
---

<BaseLayout title={title}>
  <Toaster 
    position="top-right" 
    reverseOrder={false}
    client:load
  />
  
  <!-- Activity Tracker for Auto-Logout -->
  <ActivityTracker client:load />
  
  <div class="flex h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Sidebar -->
    <AuthorSidebar client:load />
    
    <!-- Main Content Area -->
    <div class="lg:pl-64">
      <!-- Top Header (Hidden on LG, shown on Mobile) -->
      <header class="lg:hidden bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-30 h-16 flex items-center px-4 sm:px-6">
        <div class="flex items-center justify-between w-full">
          <h1 class="text-xl font-bold text-gray-900 dark:text-white truncate pr-12">
            {title}
          </h1>
        </div>
      </header>

      <!-- Page Content -->
      <main class="px-4 py-6 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>
