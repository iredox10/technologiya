---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header client:load />
  <main class="min-h-screen">
    <slot />
  </main>
  <Footer />
</BaseLayout>
