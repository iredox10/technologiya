---
import BaseLayout from './BaseLayout.astro';
import AdminSidebar from '../components/admin/AdminSidebar';
import { authService, authorService } from '../lib/appwriteServices';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Check authentication
const isAuthenticated = await authService.isAuthenticated();
if (!isAuthenticated) {
  return Astro.redirect('/login');
}

// Get current user
const userResult = await authService.getCurrentUser();
if (!userResult.success || !userResult.data) {
  return Astro.redirect('/login');
}

// Check if user is an admin
const userId = userResult.data.$id;
const authorResult = await authorService.getAuthorByUserId(userId);
if (!authorResult.success || !authorResult.data) {
  return Astro.redirect('/login');
}

// Check if user has admin role
const author = authorResult.data;
if (author.role !== 'admin') {
  return Astro.redirect('/author');
}

// Check if author is active
if (author.status !== 'active') {
  return Astro.redirect('/login');
}
---

<BaseLayout title={`${title} - Technologiya Admin`}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Admin Sidebar -->
    <AdminSidebar client:load />
    
    <!-- Main Content Area -->
    <div class="lg:pl-64 pt-14 lg:pt-0">
      <!-- Top Header -->
      <header class="bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-10">
        <div class="px-4 py-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white" style="font-family: 'Fira Code', monospace;">
              {title}
            </h1>
            <div class="flex items-center space-x-4">
              <a
                href="/"
                target="_blank"
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                Duba Shafin â†’
              </a>
            </div>
          </div>
        </div>
      </header>

      <!-- Page Content -->
      <main class="px-4 py-8 sm:px-6 lg:px-8">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>
