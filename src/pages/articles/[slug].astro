---
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleCard from '../../components/ArticleCard';
import CommentSection from '../../components/CommentSection';
import HausaTTS from '../../components/HausaTTS';
import { articleService, categoryService, authorService } from '../../lib/appwriteServices';
import type { Article, Category, Author } from '../../types';
import { formatHausaDate, getReadingTime } from '../../utils/hausa';
import '../../styles/article.css';
import { marked } from 'marked';
import hljs from 'highlight.js';
import { FiClock, FiCalendar, FiEye, FiUser, FiShare2 } from 'react-icons/fi';

marked.setOptions({
  highlight: function(code, lang) {
    const language = hljs.getLanguage(lang) ? lang : 'plaintext';
    return hljs.highlight(code, { language }).value;
  }
});

export async function getStaticPaths() {
  let allArticles: Article[] = [];
  let page = 1;
  const limit = 100;
  let hasMore = true;
  
  while (hasMore) {
    const articlesResult = await articleService.getArticles(page, limit);
    
    if (!articlesResult.success || !articlesResult.data) {
      break;
    }
    
    const articles = articlesResult.data.documents as unknown as Article[];
    allArticles = [...allArticles, ...articles];
    hasMore = articles.length === limit;
    page++;
  }
  
  // Only include published articles in static paths
  const publishedArticles = allArticles.filter(article => article.status === 'published');
  
  return publishedArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article: propsArticle } = Astro.props;
const { slug } = Astro.params;

let article: Article;
let category: Category;
let author: Author;

if (propsArticle) {
  article = propsArticle;
} else {
  const articlesResult = await articleService.getArticles(1, 100);
  if (!articlesResult.success || !articlesResult.data) {
    return Astro.redirect('/');
  }
  
  const articles = articlesResult.data.documents as unknown as Article[];
  const foundArticle = articles.find(a => a.slug === slug && a.status === 'published');
  
  if (!foundArticle) {
    return Astro.redirect('/');
  }
  
  article = foundArticle;
}

const categoryResult = await categoryService.getCategory(article.categoryId);
category = categoryResult.success && categoryResult.data 
  ? (categoryResult.data as unknown as Category)
  : { name: 'Uncategorized', slug: 'uncategorized' } as any;

const authorResult = await authorService.getAuthor(article.authorId);
author = authorResult.success && authorResult.data
  ? (authorResult.data as unknown as Author)
  : { name: 'Unknown Author', bio: '', avatar: '' } as any;

const relatedArticlesResult = await articleService.getArticles(1, 100);
let enrichedRelatedArticles: any[] = [];

if (relatedArticlesResult.success && relatedArticlesResult.data) {
  const rawRelatedArticles = (relatedArticlesResult.data.documents as unknown as Article[])
    .filter(a => 
      a.categoryId === article.categoryId && 
      a.$id !== article.$id &&
      a.status === 'published'
    )
    .slice(0, 3);

  enrichedRelatedArticles = await Promise.all(
    rawRelatedArticles.map(async (relArticle) => {
      const relCategoryResult = await categoryService.getCategory(relArticle.categoryId);
      const relAuthorResult = await authorService.getAuthor(relArticle.authorId);
      
      return {
        ...relArticle,
        category: relCategoryResult.success && relCategoryResult.data 
          ? relCategoryResult.data 
          : { name: 'Uncategorized', slug: 'uncategorized' },
        author: relAuthorResult.success && relAuthorResult.data
          ? relAuthorResult.data
          : { name: 'Unknown', avatar: '' },
      };
    })
  );
}

const baseUrl = Astro.site || 'https://technologiya.com';
const shareUrl = `${baseUrl}/articles/${article.slug}`;
const shareTitle = encodeURIComponent(article.title);
const absoluteImageUrl = article.coverImage.startsWith('http') ? article.coverImage : `${baseUrl}${article.coverImage}`;
---

<MainLayout
  title={`${article.title} - Technologiya`}
  description={article.excerpt}
  image={absoluteImageUrl}
>
  <article 
    class="min-h-screen bg-white dark:bg-[#030712]"
    data-article-id={article.$id}
    data-current-views={article.views}
  >
    
    <!-- Hero Header (Full Width) -->
    <header class="relative w-full h-[60vh] sm:h-[70vh] flex items-end overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img 
          src={article.coverImage} 
          alt={article.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-[#030712] via-[#030712]/60 to-transparent opacity-90"></div>
      </div>

      <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 relative z-10 pb-12 sm:pb-16">
        <!-- Category & Date -->
        <div class="flex items-center gap-4 mb-6 animate-fade-in-up">
          <a href={`/category/${category.slug}`} class="px-3 py-1 rounded-full bg-blue-600 text-white text-xs font-bold uppercase tracking-wider hover:bg-blue-500 transition-colors">
            {category.name}
          </a>
          <span class="flex items-center gap-2 text-gray-300 text-xs font-mono font-bold uppercase tracking-wider">
            <FiCalendar className="w-3 h-3" />
            {formatHausaDate(article.publishedAt || article.$createdAt, 'full')}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight font-display drop-shadow-lg animate-fade-in-up" style="animation-delay: 0.1s">
          {article.title}
        </h1>

        <!-- Author & Meta -->
        <div class="flex flex-wrap items-center gap-6 sm:gap-8 animate-fade-in-up" style="animation-delay: 0.2s">
          <div class="flex items-center gap-3">
            <img 
              src={author.avatar || `https://ui-avatars.com/api/?name=${author.name}`} 
              alt={author.name}
              class="w-12 h-12 rounded-full border-2 border-white/20"
            />
            <div>
              <p class="text-white font-bold text-sm">{author.name}</p>
              <p class="text-gray-400 text-xs">Marubuci</p>
            </div>
          </div>

          <div class="flex items-center gap-6 text-sm text-gray-300 font-mono">
            <span class="flex items-center gap-2" title="Lokacin Karatu">
              <FiClock className="w-4 h-4 text-blue-400" />
              {getReadingTime(article.content)}
            </span>
            <span class="flex items-center gap-2" title="Kallon">
              <FiEye className="w-4 h-4 text-purple-400" />
              <span data-view-count>{(article.views || 0).toLocaleString()}</span>
            </span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 -mt-10 relative z-20">
      <div class="bg-white dark:bg-gray-900 rounded-t-3xl p-6 sm:p-12 shadow-2xl border-t border-gray-100 dark:border-gray-800">
        
        <!-- Hausa TTS Player -->
        <div class="mb-12">
           <HausaTTS text={article.content} articleId={article.$id} client:load apiKey={import.meta.env.PUBLIC_HF_API_KEY} />
        </div>

        <!-- Article Body -->
        <div class="article-content prose prose-lg dark:prose-invert max-w-none font-serif text-gray-800 dark:text-gray-200 leading-relaxed">
          <div set:html={article.content} />
        </div>

        <!-- Tags -->
        {article.tags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-gray-100 dark:border-gray-800">
            <div class="flex flex-wrap gap-2">
              {article.tags.map((tag) => (
                <span class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 text-sm font-medium hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
        )}

        <!-- Author Bio Box -->
        {author.bio && (
          <div class="mt-16 p-8 rounded-2xl bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700 flex flex-col sm:flex-row gap-6 items-center sm:items-start text-center sm:text-left">
            <img 
              src={author.avatar || `https://ui-avatars.com/api/?name=${author.name}`} 
              alt={author.name}
              class="w-20 h-20 rounded-full ring-4 ring-white dark:ring-gray-700 shadow-md"
            />
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                Game da {author.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                {author.bio}
              </p>
            </div>
          </div>
        )}

        <!-- Share Actions -->
        <div class="mt-12 flex justify-center">
          <div class="inline-flex items-center gap-2 p-1 rounded-full bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
             <span class="px-4 text-sm font-bold text-gray-500 dark:text-gray-400">Raba Labarin:</span>
             <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`} target="_blank" class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 flex items-center justify-center text-blue-600 hover:bg-blue-600 hover:text-white transition-all">
               <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
             </a>
             <a href={`https://twitter.com/intent/tweet?text=${shareTitle}&url=${encodeURIComponent(shareUrl)}`} target="_blank" class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 flex items-center justify-center text-sky-500 hover:bg-sky-500 hover:text-white transition-all">
               <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
             </a>
             <a href={`https://wa.me/?text=${shareTitle}%20${encodeURIComponent(shareUrl)}`} target="_blank" class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 flex items-center justify-center text-green-500 hover:bg-green-500 hover:text-white transition-all">
               <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
             </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Comments (Full Width Background) -->
    <div class="bg-gray-50 dark:bg-[#050a18] py-16 border-t border-gray-200 dark:border-gray-900">
      <div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <CommentSection articleId={article.$id} client:visible />
      </div>
    </div>

    <!-- Related Articles -->
    {enrichedRelatedArticles.length > 0 && (
      <section class="py-16 bg-white dark:bg-[#030712] border-t border-gray-100 dark:border-gray-900">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white font-display">
              Labarai Masu Ala∆ôa
            </h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {enrichedRelatedArticles.map((related) => (
              <ArticleCard article={related} client:visible />
            ))}
          </div>
        </div>
      </section>
    )}

  </article>
</MainLayout>

<script>
  import { Client, Databases } from 'appwrite';
  
  const articleElement = document.querySelector('[data-article-id]');
  if (articleElement) {
    const articleId = articleElement.getAttribute('data-article-id');
    const currentViews = parseInt(articleElement.getAttribute('data-current-views') || '0');
    
    async function trackView() {
      try {
        const viewedKey = `viewed_${articleId}`;
        if (sessionStorage.getItem(viewedKey)) return;

        const client = new Client()
          .setEndpoint(import.meta.env.PUBLIC_APPWRITE_ENDPOINT)
          .setProject(import.meta.env.PUBLIC_APPWRITE_PROJECT_ID);

        const databases = new Databases(client);

        await databases.updateDocument(
          import.meta.env.PUBLIC_APPWRITE_DATABASE_ID,
          import.meta.env.PUBLIC_APPWRITE_COLLECTION_ARTICLES,
          articleId!,
          { views: currentViews + 1 }
        );

        sessionStorage.setItem(viewedKey, 'true');
      } catch (error) {
        console.error('Error tracking view:', error);
      }
    }
    trackView();
  }
</script>