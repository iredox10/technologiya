---
import AuthorLayout from '../../../../layouts/AuthorLayout.astro';
import ArticleEditor from '../../../../components/admin/ArticleEditor.tsx';

export function getStaticPaths() {
  // Return empty array for dev mode - Astro will generate pages on-demand
  return [];
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/author/articles');
}
---

<AuthorLayout title="Gyara Labari">
  <ArticleEditor articleId={id} isEditing={true} isAuthorMode={true} client:load />
</AuthorLayout>
