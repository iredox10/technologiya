---
import MainLayout from '../layouts/MainLayout.astro';
import { FiMail, FiPhone, FiMapPin, FiSend } from 'react-icons/fi';
---

<MainLayout
  title="Tuntuɓe Mu - Technologiya"
  description="Tuntuɓe ƙungiyar Technologiya. Muna sauraron ra'ayoyin ku da tambayoyin ku."
>
  <div class="min-h-screen bg-white dark:bg-[#030712] pt-24 pb-20 relative overflow-hidden">
    
    {/* Background Gradients */}
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-blue-600/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-pink-600/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="container mx-auto px-4 relative z-10">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start max-w-6xl mx-auto">
        
        {/* Left Column: Info */}
        <div>
          <span class="text-blue-600 dark:text-blue-400 font-mono font-bold tracking-wider text-sm mb-4 block">
            SADARWA
          </span>
          <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6 font-display leading-tight">
            Muna son jin <br />
            daga gare ku.
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 leading-relaxed">
            Kuna da tambaya, shawara, ko kuna son haɗin gwiwa? Cika fom ɗin ko tuntuɓe mu ta hanyoyin da ke ƙasa.
          </p>

          <div class="space-y-8">
            <div class="flex items-start gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform duration-300">
                <FiMail class="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Yi mana Email</h3>
                <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">Muna amsa saƙonni cikin 24hrs.</p>
                <a href="mailto:sannu@technologiya.com" class="text-blue-600 font-semibold hover:underline">sannu@technologiya.com</a>
              </div>
            </div>

            <div class="flex items-start gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-purple-50 dark:bg-purple-900/20 flex items-center justify-center text-purple-600 dark:text-purple-400 group-hover:scale-110 transition-transform duration-300">
                <FiPhone class="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Kira Mu</h3>
                <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">Litinin - Juma'a, 9am zuwa 5pm.</p>
                <a href="tel:+2348000000000" class="text-purple-600 font-semibold hover:underline">+234 800 000 0000</a>
              </div>
            </div>

            <div class="flex items-start gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-green-50 dark:bg-green-900/20 flex items-center justify-center text-green-600 dark:text-green-400 group-hover:scale-110 transition-transform duration-300">
                <FiMapPin class="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Ofishin Mu</h3>
                <p class="text-gray-500 dark:text-gray-400 text-sm">
                  No. 123 Zoo Road,<br />
                  Kano State, Nigeria.
                </p>
              </div>
            </div>
          </div>
        </div>

        {/* Right Column: Form */}
        <div class="bg-white dark:bg-gray-900 rounded-[2.5rem] p-8 sm:p-10 shadow-2xl shadow-gray-200/50 dark:shadow-none border border-gray-100 dark:border-gray-800">
          <form id="contactForm" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-sm font-bold text-gray-700 dark:text-gray-300 ml-1">Suna</label>
                <input type="text" name="name" placeholder="Sunan ku" class="w-full px-5 py-4 rounded-xl bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900 dark:text-white placeholder-gray-400" required />
              </div>
              <div class="space-y-2">
                <label class="text-sm font-bold text-gray-700 dark:text-gray-300 ml-1">Email</label>
                <input type="email" name="email" placeholder="example@mail.com" class="w-full px-5 py-4 rounded-xl bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900 dark:text-white placeholder-gray-400" required />
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-sm font-bold text-gray-700 dark:text-gray-300 ml-1">Batu</label>
              <select name="subject" class="w-full px-5 py-4 rounded-xl bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900 dark:text-white cursor-pointer appearance-none">
                <option value="" disabled selected>Zaɓi batun saƙonku</option>
                <option value="support">Neman Taimako</option>
                <option value="feedback">Ra'ayi / Shawara</option>
                <option value="partnership">Haɗin Gwiwa</option>
                <option value="other">Wani Abu Daban</option>
              </select>
            </div>

            <div class="space-y-2">
              <label class="text-sm font-bold text-gray-700 dark:text-gray-300 ml-1">Saƙo</label>
              <textarea name="message" rows="5" placeholder="Rubuta saƙonku anan..." class="w-full px-5 py-4 rounded-xl bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900 dark:text-white placeholder-gray-400 resize-none" required></textarea>
            </div>

            <button type="submit" class="w-full py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-600/30 hover:shadow-blue-600/50 transition-all transform hover:-translate-y-1 flex items-center justify-center gap-2">
              <span>Aika Saƙo</span>
              <FiSend />
            </button>
          </form>
        </div>

      </div>
    </div>
  </div>
</MainLayout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Na gode! An karɓi saƙonku.');
      form.reset();
    });
  }
</script>