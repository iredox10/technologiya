                {category.articles.slice(0, 3).map((article, idx) => (
                  <a 
                    href={`/articles/${article.slug}`}
                    class="block group/item hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl p-3 sm:p-4 transition-all duration-300 border border-transparent hover:border-blue-200 dark:hover:border-blue-900"
                  >
                    <div class="flex gap-3 sm:gap-4">
                      <!-- Thumbnail -->
