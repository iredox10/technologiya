---
import MainLayout from '../layouts/MainLayout.astro';
import ArticleCard from '../components/ArticleCard';
import { articleService, categoryService, authorService } from '../lib/appwriteServices';
import type { Article, Category } from '../types';
import { FiArrowRight, FiSmartphone, FiMonitor, FiCpu, FiWifi, FiLayers, FiArrowUpRight } from 'react-icons/fi';

export const prerender = false;

// Data Fetching
const articlesResult = await articleService.getArticles(1, 100);
const allArticles = articlesResult.success && articlesResult.data 
  ? (articlesResult.data.documents as unknown as Article[])
  : [];

const publishedArticles = allArticles.filter(article => article.status === 'published');
// Get top 3 featured articles
const rawFeaturedArticles = publishedArticles.filter(article => article.featured).slice(0, 5);
const rawLatestArticles = publishedArticles
  .sort((a, b) => new Date(b.$createdAt).getTime() - new Date(a.$createdAt).getTime())
  .slice(0, 9);

async function enrichArticle(article: Article) {
  const [categoryResult, authorResult] = await Promise.all([
    categoryService.getCategory(article.categoryId),
    authorService.getAuthor(article.authorId)
  ]);
  
  return {
    ...article,
    category: categoryResult.success && categoryResult.data 
      ? categoryResult.data 
      : { name: 'Uncategorized', slug: 'uncategorized' },
    author: authorResult.success && authorResult.data
      ? authorResult.data
      : { name: 'Unknown', avatar: '' },
  };
}

const featuredArticles = await Promise.all(rawFeaturedArticles.map(enrichArticle));
const latestArticles = await Promise.all(rawLatestArticles.map(enrichArticle));

// Split featured articles
const mainFeatured = featuredArticles[0];
const subFeatured = featuredArticles.slice(1, 5); // Take articles from index 1 up to index 4 (5 total articles)

const categoriesResult = await categoryService.getCategories();
let categories = [];
if (categoriesResult.success && categoriesResult.data) {
  categories = categoriesResult.data.documents as unknown as Category[];
}

const getCategoryIcon = (slug: string) => {
  switch (slug) {
    case 'wayoyi': return FiSmartphone;
    case 'manhajoji': return FiLayers;
    case 'bita': return FiMonitor;
    case 'dabaru': return FiCpu;
    case 'koyarwa': return FiWifi;
    default: return FiArrowRight;
  }
};

const getCategoryColor = (slug: string) => {
  switch (slug) {
    case 'wayoyi': return 'from-blue-500 to-blue-600';
    case 'manhajoji': return 'from-purple-500 to-purple-600';
    case 'bita': return 'from-emerald-500 to-emerald-600';
    case 'dabaru': return 'from-amber-500 to-amber-600';
    case 'koyarwa': return 'from-pink-500 to-pink-600';
    default: return 'from-gray-500 to-gray-600';
  }
};
---

<MainLayout 
  title="Technologiya - Labaran Fasaha"
  description="Cibiyar labaran fasaha ta zamani a harshen Hausa"
>
  <div class="min-h-screen bg-white dark:bg-[#030712] overflow-x-hidden font-sans">
    
    {/* --- HERO SECTION: MUHIMMAN LABARAI (Grid Layout) --- */}
    <section class="pt-24 pb-16 sm:pt-32 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
      
      {/* Section Header */}
      <div class="flex items-center gap-4 mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white tracking-tight font-display">
          Muhimman Labarai
        </h1>
        <div class="h-px flex-1 bg-gray-200 dark:bg-gray-800"></div>
      </div>

      {mainFeatured ? (
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 h-auto lg:h-[600px]">
          
          {/* Main Featured Article (Left - Large) */}
          <div class="lg:col-span-8 h-[400px] lg:h-full relative group rounded-3xl overflow-hidden shadow-2xl">
            <img 
              src={mainFeatured.coverImage} 
              alt={mainFeatured.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
            
            <div class="absolute bottom-0 left-0 p-6 sm:p-10 w-full">
              <span class="inline-block px-3 py-1 mb-4 text-xs font-bold tracking-wider text-white uppercase bg-blue-600 rounded-full">
                {mainFeatured.category?.name}
              </span>
              <h2 class="text-3xl sm:text-5xl font-bold text-white mb-4 leading-tight">
                <a href={`/articles/${mainFeatured.slug}`} class="hover:underline decoration-blue-500 decoration-4 underline-offset-4">
                  {mainFeatured.title}
                </a>
              </h2>
              <p class="text-gray-300 text-lg line-clamp-2 max-w-2xl mb-6 hidden sm:block">
                {mainFeatured.excerpt}
              </p>
              <div class="flex items-center gap-4 text-sm font-medium text-white/80">
                 <img src={mainFeatured.author?.avatar || "https://ui-avatars.com/api/?name=A"} class="w-8 h-8 rounded-full border border-white/30" />
                 <span>{mainFeatured.author?.name}</span>
                 <span class="w-1 h-1 rounded-full bg-white/50"></span>
                 <span>{new Date(mainFeatured.publishedAt || mainFeatured.$createdAt).toLocaleDateString('ha-NG')}</span>
              </div>
            </div>
          </div>

          {/* Secondary Featured Articles (Right - Stacked) */}
          <div class="lg:col-span-4 flex flex-col gap-6 h-full overflow-y-auto pr-2 custom-scrollbar"> {/* Added overflow-y-auto and pr-2 for scrollbar, custom-scrollbar class for styling */}
            {subFeatured.map((article) => (
              <div class="relative flex-1 rounded-3xl overflow-hidden group h-[280px] lg:h-auto min-h-[250px]"> {/* Adjusted height and added min-h */}
                <img 
                  src={article.coverImage} 
                  alt={article.title}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/20 to-transparent opacity-90"></div>
                
                <div class="absolute bottom-0 left-0 p-6 w-full">
                  <span class="inline-block px-2 py-1 mb-2 text-[10px] font-bold tracking-wider text-white uppercase bg-purple-600 rounded-md">
                    {article.category?.name}
                  </span>
                  <h3 class="text-xl font-bold text-white mb-2 leading-snug">
                    <a href={`/articles/${article.slug}`} class="hover:text-blue-300 transition-colors">
                      {article.title}
                    </a>
                  </h3>
                  <div class="flex items-center gap-2 text-xs text-gray-300">
                     <span>{new Date(article.publishedAt || article.$createdAt).toLocaleDateString('ha-NG')}</span>
                     <FiArrowUpRight />
                  </div>
                </div>
              </div>
            ))}
            
            {/* If less than 2 sub-featured, show a generic "More" card or ad space to fill height */}
            {subFeatured.length < 2 && (
              <a href="/archive" class="relative flex-1 rounded-3xl overflow-hidden bg-gray-100 dark:bg-gray-800 flex items-center justify-center group border-2 border-dashed border-gray-300 dark:border-gray-700 hover:border-blue-500 transition-colors">
                <div class="text-center">
                   <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform">
                     <FiArrowRight className="w-6 h-6" />
                   </div>
                   <span class="font-bold text-gray-900 dark:text-white">Duba Wasu Labaran</span>
                </div>
              </a>
            )}
          </div>

        </div>
      ) : (
        <div class="h-96 rounded-3xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
          <p class="text-gray-500">Ana loda labarai...</p>
        </div>
      )}
    </section>


    {/* --- LATEST ARTICLES SECTION --- */}
    <section class="py-16 bg-gray-50 dark:bg-[#050a18]/50 border-t border-gray-100 dark:border-gray-900">
      <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex items-end justify-between mb-10">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white font-display">
              Sabbin Labarai
            </h2>
          </div>
          <a href="/archive" class="group flex items-center gap-2 text-sm font-bold text-blue-600 dark:text-blue-400">
            Duba Duka 
            <span class="group-hover:translate-x-1 transition-transform"><FiArrowRight /></span>
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestArticles.map((article) => (
            <ArticleCard article={article} client:visible />
          ))}
        </div>
      </div>
    </section>


    {/* --- CATEGORIES SECTION --- */}
    <section class="py-24 bg-white dark:bg-[#030712]">
      <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4 font-display">
            Bincika Rukunai
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            Za…ìi fannin da kake sha'awa domin samun labarai na musamman
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
          {categories.slice(0, 5).map((cat) => {
            const Icon = getCategoryIcon(cat.slug);
            const gradient = getCategoryColor(cat.slug);
            const count = publishedArticles.filter(a => a.categoryId === cat.$id).length;
            
            return (
              <a href={`/category/${cat.slug}`} class="group relative flex flex-col items-center p-8 rounded-[2rem] bg-gray-50 dark:bg-gray-900 hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 hover:shadow-xl hover:-translate-y-2 border border-transparent hover:border-gray-100 dark:hover:border-gray-700">
                <div class={`w-16 h-16 rounded-2xl bg-gradient-to-tr ${gradient} flex items-center justify-center text-white mb-6 shadow-lg group-hover:scale-110 transition-transform duration-500 rotate-3 group-hover:rotate-6`}>
                  <Icon className="w-8 h-8" />
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
                  {cat.name}
                </h3>
                <span class="px-3 py-1 rounded-full bg-gray-200 dark:bg-gray-800 text-xs font-mono font-medium text-gray-600 dark:text-gray-400 group-hover:bg-blue-100 dark:group-hover:bg-blue-900/30 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {count}
                </span>
              </a>
            );
          })}
        </div>
      </div>
    </section>

    {/* --- FOOTER CTA --- */}
    <section class="py-20 bg-gray-900 dark:bg-black text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-blue-600/20 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-600/20 rounded-full blur-[120px]"></div>
      
      <div class="container mx-auto max-w-4xl text-center px-4 relative z-10">
        <h2 class="text-3xl sm:text-5xl font-bold mb-8 font-display">Shirye don fara karatu?</h2>
        <a href="/archive" class="inline-flex items-center px-10 py-4 rounded-full bg-white text-gray-900 font-bold text-lg hover:bg-blue-50 transition-colors shadow-xl hover:shadow-2xl hover:scale-105 transform duration-300">
          Duba Duk Labarai
        </a>
      </div>
    </section>

  </div>
</MainLayout>