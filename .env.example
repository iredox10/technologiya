# Appwrite Configuration
# Get these values from your Appwrite Console (https://cloud.appwrite.io)

# Appwrite Endpoint (use https://cloud.appwrite.io/v1 for Appwrite Cloud)
PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Project ID from Appwrite Console
PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Your Database ID
PUBLIC_APPWRITE_DATABASE_ID=your_database_id_here

# Collection IDs
PUBLIC_APPWRITE_COLLECTION_ARTICLES=articles
PUBLIC_APPWRITE_COLLECTION_CATEGORIES=categories
PUBLIC_APPWRITE_COLLECTION_AUTHORS=authors
PUBLIC_APPWRITE_COLLECTION_COMMENTS=comments
PUBLIC_APPWRITE_COLLECTION_USERS=users

# Storage Bucket IDs
PUBLIC_APPWRITE_BUCKET_ARTICLE_IMAGES=article-images
PUBLIC_APPWRITE_BUCKET_AUTHOR_AVATARS=author-avatars

# Hugging Face API Key (for TTS)
HUGGINGFACEAPIKEY=your_huggingface_api_key_here
